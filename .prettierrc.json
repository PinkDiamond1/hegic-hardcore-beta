{
  "printWidth": 80,
  "bracketSpacing": false,
  "semi": false,
  "explicitTypes": "preserve",
  "singleQuote": false,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript",
        "trailingComma": "all",
        "arrowParens": "always"
      }
    },
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.md",
      "options": {
        "semi": false
      }
    }
  ]
}
